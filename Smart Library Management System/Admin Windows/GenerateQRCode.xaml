<Window x:Class="Smart_Library_Management_System.Admin_Windows.GenerateQRCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smart_Library_Management_System.Admin_Windows"
        mc:Ignorable="d"
        Title="GenerateQRCode" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="\Pictures\CREATE QR.png"/>
    </Window.Background>
    <Grid>
        <Image x:Name="imgQR" 
               HorizontalAlignment="Left" 
               Height="270" 
               Width="270" 
               Margin="105,103,0,0" 
               VerticalAlignment="Top"/>
        <Button x:Name="btnGenerateQR" 
                Content="Button" 
                HorizontalAlignment="Left" 
                Margin="538,168,0,0"
                VerticalAlignment="Top" 
                Height="32" Width="138" 
                Click="btnGenerateQR_Click"/>

    </Grid>
</Window>
